
{
  "name": "Neurodiversity Learning Platform - Document Reader",
  "short_name": "NeuroReader",
  "description": "Accessible document reader optimized for neurodivergent learners",
  "start_url": "/dashboard/learner/library",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "any",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["education", "productivity", "accessibility"],
  "lang": "en",
  "dir": "ltr",
  "shortcuts": [
    {
      "name": "Library",
      "short_name": "Library",
      "description": "Access your document library",
      "url": "/dashboard/learner/library",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Uploads",
      "short_name": "Uploads",
      "description": "View your uploaded documents",
      "url": "/dashboard/learner/library?section=uploads",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/dashboard/learner/library",
      "accept": {
        "application/pdf": [".pdf"],
        "application/epub+zip": [".epub"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+neuroreader",
      "url": "/dashboard/learner/library?document=%s"
    }
  ]
}
